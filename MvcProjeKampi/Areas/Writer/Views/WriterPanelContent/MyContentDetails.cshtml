    @model List<Content>*@
@model EntityLayer.Concrete.Content
@{
    ViewBag.Title = "MyContentDetails";
    Layout = "~/Areas/Writer/Views/Shared/_WriterLayout.cshtml";
}
<script src="~/AdminLT/assets/bundles/lib.vendor.bundle.js"></script>
<script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">
        <section class="content">
            <div class="container-fluid">

                <!-- Timelime example  -->
                <div class="row">
                    <div class="col-md-12">
                        <!-- The time line -->



                        <div class="timeline">
                            <!-- timeline time label -->
                           
                                <div class="time-label">
                                    <span class="bg-success">@Html.DisplayFor(x=>x.ContentDate.ToLongDateString())</span>
                                </div>
                                <!-- /.timeline-label -->
                                <!-- timeline item -->
                                <div>
                                    <a class="fas fa-comment bg-yellow" href="/WriterPanelontent/MyContentDetails/"><i @*class="fas fa-comment bg-yellow"*@></i></a>
                                    <div class="timeline-item">
                                        <h3 class="timeline-header"><a href="#">@Html.DisplayFor(x=>x.Heading.HeadingName)</a></h3>
                                        <div class="timeline-body">
                                            @Html.DisplayFor(x => x.ContentValue)
                                        </div>
                                    </div>
                                </div>
                    
                        </div>
                    </div>
                    <!-- /.col -->
                </div>
            </div>
            <!-- /.timeline -->
        </section>
        <!-- /.content -->
    </div>
    <!-- ./wrapper -->
</body>
</html>


