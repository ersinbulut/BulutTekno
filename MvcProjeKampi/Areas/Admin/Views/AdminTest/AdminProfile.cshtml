@model EntityLayer.Concrete.AdminUser

@{
    ViewBag.Title = "AdminProfile";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<head>
    <!-- Bootstrap Core and vandor -->
    <link rel="stylesheet" href="~/AdminLT/assets/plugins/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/AdminLT/assets/plugins/dropify/css/dropify.min.css">




    <script src="~/AdminLT/assets/bundles/lib.vendor.bundle.js"></script>
    <script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
</head>

<h2>Admin Profili</h2>

<div class="section-body mt-3">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-lg-4 col-md-12">
                <div class="card c_grid c_yellow">
                    <div class="card-body text-center">
                        <div class="circle">
                            <img class="rounded-circle" src="@Html.DisplayFor(x=>x.AdminImage)" width="140" height="140" alt="">
                        </div>
                        <h6 class="mt-3 mb-0">@Html.DisplayFor(x => x.AdminUserName)</h6>
                        <ul class="mt-3 list-unstyled d-flex justify-content-center">
                            <li><a class="p-3" target="_blank" href="#"><i class="fa fa-facebook"></i></a></li>
                            <li><a class="p-3" target="_blank" href="#"><i class="fa fa-slack"></i></a></li>
                            <li><a class="p-3" target="_blank" href="#"><i class="fa fa-linkedin"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-12">

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Profili Düzenle</h3>
                        <div class="card-options">
                            <a href="#" class="card-options-fullscreen" data-toggle="card-fullscreen"><i class="fe fe-maximize"></i></a>
                            <a href="#" class="card-options-remove" data-toggle="card-remove"><i class="fe fe-x"></i></a>
                            <div class="item-action dropdown ml-2">
                                <a href="javascript:void(0)" data-toggle="dropdown"><i class="fe fe-more-vertical"></i></a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fa fa-eye"></i> View Details </a>
                                    <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fa fa-share-alt"></i> Share </a>
                                    <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fa fa-cloud-download"></i> Download</a>
                                    <div class="dropdown-divider"></div>
                                    <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fa fa-copy"></i> Copy to</a>
                                    <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fa fa-folder"></i> Move to</a>
                                    <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fa fa-edit"></i> Rename</a>
                                    <a href="javascript:void(0)" class="dropdown-item"><i class="dropdown-icon fa fa-trash"></i> Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("EditAdmin", "AdminTest", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        <div class="card-body">
                            <div class="row clearfix">
                                <div class="col-sm-6 col-md-6">

                                    @Html.HiddenFor(x => x.AdminID, new { @class = "form-control" })

                                    <div class="form-group">
                                        <label class="form-label">Admin Adı</label>
                                        @*<input type="text" name="WriterName" class="form-control" placeholder="Adınız" value="@Html.DisplayFor(x=>x.WriterName)">*@
                                        @Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-label">Durum</label>
                                        @*<input type="text" name="WriterMail" class="form-control" placeholder="info@gamail.com" value="@Html.DisplayFor(x=>x.WriterMail)">*@
                                        @Html.TextBoxFor(x => x.AdminStatus, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label class="form-label">Resim Yolu</label>
                                        <input type="file" class="dropify" name="AdminImage">
                                        <small class="text-danger">Önerilen resim boyutu 140 px x 140 px dir</small>
                                        @Html.TextBoxFor(x => x.AdminImage, new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Şifre</label>
                                        <input type="text" name="AdminUserPassword" class="form-control" placeholder="******" value="@Html.DisplayFor(x=>x.AdminUserPassword)">
                                    </div>
                                </div>
                                <div class="col-sm-6 col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Admin Rolü (A ya da B)</label>
                                        @*<input type="text" name="WriterTitle" class="form-control" placeholder="Blogger" value="@Html.DisplayFor(x=>x.WriterTitle)">*@
                                        @Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer text-right">
                            <button type="submit" id="btn3" class="btn btn-primary">Profili Güncelle</button>
                        </div>
                    }

                </div>

            </div>
        </div>
    </div>
</div>


<script>
    $('#btn3').click(function () {
        swal("Başarılı", "Değişiklikler Uygulandı.", "success");
    });
</script>


<script src="~/AdminLT/assets/plugins/dropify/js/dropify.min.js"></script>

<script src="~/AdminLT/assets/js/core.js"></script>
<script>
    $(function () {
        "use strict";

        $('.dropify').dropify();

        var drEvent = $('#dropify-event').dropify();
        drEvent.on('dropify.beforeClear', function (event, element) {
            return confirm("Do you really want to delete \"" + element.file.name + "\" ?");
        });

        drEvent.on('dropify.afterClear', function (event, element) {
            alert('File deleted');
        });

        $('.dropify-fr').dropify({
            messages: {
                default: 'Glissez-déposez un fichier ici ou cliquez',
                replace: 'Glissez-déposez un fichier ou cliquez pour remplacer',
                remove: 'Supprimer',
                error: 'Désolé, le fichier trop volumineux'
            }
        });
    });
</script>


