@using EntityLayer.Concrete
@model List<Talent>

@{
    ViewBag.Title = "TalentList";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/AdminLT/assets/bundles/lib.vendor.bundle.js"></script>
<script src="~/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

<h2>Yeteneklerim</h2>
<br />

<div class="section-body">
    <div class="container-fluid">
        <div class="tab-content taskboard">
            <div class="tab-pane fade show active" id="TaskBoard-list" role="tabpanel">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover table-vcenter mb-0 table_custom spacing8 text-nowrap">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Resim</th>
                                        <th>Adı Soyadı</th>
                                        <th>Açıklama</th>
                                        <th>Yetenek</th>
                                        <th>Yüzdesi</th>
                                        <th>Yüzde Değeri</th>
                                        <th>SİL</th>
                                        <th>GÜNCELLE</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@item.TalentID</td>
                                        <td>
                                            <img src="@item.WriterUser.WriterImage" alt="user ımage" width="30" height="30" />
                                        </td>
                                        <td>
                                            <h6 class="mb-0">@item.WriterUser.WriterName @item.WriterUser.WriterSurname</h6>
                                        </td>
                                        <td>
                                            <h6 class="mb-0">@item.Description.Substring(0,1)...</h6>
                                        </td>
                                        <td>
                                            <h6 class="mb-0">@item.TalentDescription</h6>
                                        </td>
                                        <td>
                                            <h6 class="mb-0">@item.Percent</h6>
                                        </td>
                                        <td>
                                            <h6 class="mb-0">@item.PercentValue</h6>
                                        </td>
                                        <td>
                                            <a href="/Admin/AdminTalent/DeleteTalent/@item.TalentID" class="btn btn-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Admin/AdminTalent/EditTalent/@item.TalentID" class="btn btn-warning">Güncelle</a>
                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/Admin/AdminTalent/AddTalent/" class="btn btn-info">Yeni Yetenek</a>
        </div>
    </div>
</div>


