@using EntityLayer.Concrete
@model List<About>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <script src="~/AdminLTE/plugins/jquery/jquery.min.js"></script>

</head>
<h2>Hakkımda Veri Listesi</h2>

<div class="section-body">
    <div class="container-fluid">
        <div class="tab-content taskboard">
            <div class="tab-pane fade show active" id="TaskBoard-list" role="tabpanel">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover table-vcenter mb-0 table_custom spacing8 text-nowrap">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Hakkımda Başlığı</th>
                                        <th>Durum</th>
                                        <th>Aktif Yap</th>
                                        <th>Pasif Yap</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.AboutID</td>
                                            <td>Başlık</td>
                                            <td>
                                                @if (item.AboutStatus == true)
                                                {
                                                    <p>Aktif</p>
                                                }
                                                else
                                                {
                                                    <p>Pasif</p>
                                                }
                                            </td>
                                            <td><a href="/Admin/AdminAbout/Active/@item.AboutID" class="btn btn-warning">Aktif Yap</a></td>
                                            <td><a href="/Admin/AdminAbout/DeActive/@item.AboutID" class="btn btn-danger">Pasif Yap</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Action("AboutPartial", "AdminAbout")

