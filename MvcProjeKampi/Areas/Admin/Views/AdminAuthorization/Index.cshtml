@using EntityLayer.Concrete
@model List<AdminUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3>Adminler</h3>
<br />

<div class="section-body">
    <div class="container-fluid">
        <div class="tab-content taskboard">
            <div class="tab-pane fade show active" id="TaskBoard-list" role="tabpanel">
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-hover table-vcenter mb-0 table_custom spacing8 text-nowrap">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Admin Mail</th>
                                        <th>Yetki</th>
                                        <th>Status</th>
                                        <th>Pasif Yap</th>
                                        <th>Yetkisini Değiştir</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <th>@item.AdminID</th>
                                            <td>@item.AdminUserName</td>
                                            <td>@item.AdminRole</td>
                                            <td>Aktif</td>
                                            <td><a href="/Admin/AdminAuthorization/DeActive/@item.AdminID" class="btn btn-danger">Pasif Yap</a></td>
                                            <td><a href="/Admin/AdminAuthorization/EditAdmin/@item.AdminID" class="btn btn-warning">Yetkisini Değiştir</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <a href="/Admin/AdminAuthorization/AddAdmin" class="btn btn-info">Yeni Admin Tanımla</a>
        </div>
    </div>
</div>



