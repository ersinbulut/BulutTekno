
@using EntityLayer.Concrete
@model List<Comment>



<div class="col-lg-12">
    <div class="comments-list">
        @foreach (var item2 in Model)
        {
            <div class="media">
                <a class="media-left" href="/BlogTECH/#">
                    <img src="@item2.Writer.WriterImage" style="width:400px; height:125px;" alt="" class="rounded-circle">
                </a>
                <div class="media-body">
                    <h4 class="media-heading user_name">@item2.Writer.WriterName @item2.Writer.WriterSurname<small>@item2.CommentDate.ToLongDateString()</small></h4>
                    <p>@item2.CommentValue</p>
                    <a href="/BlogTECH/#" class="btn btn-primary btn-sm">Yanıtla</a>
                </div>
            </div>
        }
    </div>
</div><!-- end col -->