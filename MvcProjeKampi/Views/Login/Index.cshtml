
@{ Layout = null; }

<!doctype html>
<html lang="en" dir="ltr">

<!-- soccer/project/login.html  07 Jan 2020 03:42:43 GMT -->
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="icon" href="~/AdminLT/favicon.ico" type="image/x-icon" />

    <title>BulutTekno Admin Giriş</title>

    <!-- Bootstrap Core and vandor -->
    <link rel="stylesheet" href="~/AdminLT/assets/plugins/bootstrap/css/bootstrap.min.css" />

    <!-- Core css -->
    <link rel="stylesheet" href="~/AdminLT/assets/css/main.css" />
    <link rel="stylesheet" href="~/AdminLT/assets/css/theme1.css" />

</head>
<body class="font-montserrat">

    <div class="auth">
        <div class="auth_left">
            @using (Html.BeginForm("Index", "Login", FormMethod.Post))
            {
                <div class="card">
                    <div class="text-center mb-2">
                        <a class="header-brand" href="~/AdminLT/index-2.html"><i class="fa fa-soccer-ball-o brand-logo"></i></a>
                    </div>
                    <div class="card-body">
                        <div class="card-title">Admin hesabınıza giriş yapın</div>
                        <div class="form-group">
                            <label class="form-label">Kullanıcı Adı</label>
                                <input type="email" class="form-control" id="exampleInputEmail1" name="AdminUserName" aria-describedby="emailHelp" placeholder="Kullanıcı Adı">
                        </div>
                        <div class="form-group">
                            <label class="form-label">Şifre<a href="~/AdminLT/forgot-password.html" class="float-right small">Şifremi Unuttum</a></label>
                            <input type="password" class="form-control" name="AdminUserPassword" id="exampleInputPassword1" placeholder="******">
                        </div>
                        <div class="form-group">
                            <label class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" />
                                <span class="custom-control-label">Beni Hatırla</span>
                            </label>
                        </div>
                        <div class="form-footer">
                            <button type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
                        </div>
                    </div>
                    <div class="text-center text-muted">
                        Henüz hesabınız yok mu? <a href="~/AdminLT/register.html">Kaydolun</a>
                    </div>
                </div>           
            }
        </div>
        <div class="auth_right full_img"></div>
    </div>

    <script src="~/AdminLT/assets/bundles/lib.vendor.bundle.js"></script>
    <script src="~/AdminLT/assets/js/core.js"></script>
</body>

<!-- soccer/project/login.html  07 Jan 2020 03:42:43 GMT -->
</html>
